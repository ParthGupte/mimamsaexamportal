container_commands:
  00_pip_upgrade:
    command: "source /var/app/venv/*/bin/activate && pip install --upgrade pip"
    ignoreErrors: false
  00_migrate:
    command: "python3 manage.py migrate"
    leader_only: true
  01_collectstatic:
    command: "python3 manage.py collectstatic --noinput"
  02_wsgipass:
    command: 'echo "WSGIPassAuthorization On" >> ../wsgi.conf'